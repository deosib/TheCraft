<!DOCTYPE html>
<html lang="en">
<head>
    <title>The CRAFT Pâtisserie</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="The CRAFT Pâtisserie" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>

    <link href="~/Content/css/bootstrap.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Content/assets/owl.carousel.css" rel="stylesheet" />
    <link href="~/Content/css/fonts/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/css/fonts/fontFace.css" rel="stylesheet" />
    <link href="~/Content/css/fonts/languages.css" rel="stylesheet" />
    <link href="~/Content/css/fonts/thecraft-font.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/css/style.css" type="text/css" media="all" />
    <link href="~/Content/css/responsive.css" rel="stylesheet" />
    <link href="~/Content/css/custom.css" rel="stylesheet" />

    <script src="~/Scripts/vendors/jquery-1.11.1.min.js"></script>
    <script src="~/Scripts/vendors/bootstrap.js"></script>
    <script src="~/Scripts/vendors/owl.carousel.min.js"></script>

    <script type="text/javascript" src="~/Scripts/vendors/easing.js"></script>
    <script type="text/javascript">
        jQuery(document).ready(function ($) {
            $(".scroll").click(function (event) {
                event.preventDefault();
                $('html,body').animate({ scrollTop: $(this.hash).offset().top }, 1000);
            });
        });
    </script>
    <script type="text/javascript" src="~/Scripts/vendors/numscroller-1.0.js"></script>
</head>
<body>
    <div class="header-w3">
        <div class="header-top-agile">
            <div class="tc-address font-1">
                Số 39 Làng Yên Phụ
                Hà Nội, 10000 | 10AM-10PM
            </div>
        </div>
        <div class="header-bottom-agile">
            <div class="container tc-top-container">
                <div class="col-md-9 navigation">
                    <nav class="navbar navbar-default cl-effect-16" id="cl-effect-16">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <div id="navbar" class="navbar-collapse navbar-right collapse hover-effect">
                            <ul class="nav navbar-nav">
                                <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">@Html.ActionLink("HOME", "Index", "Home")</li>
                                <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Menu" ? "active" : "")">@Html.ActionLink("MENU", "Menu", "Home")</li>
                                <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Workshop" ? "active" : "")">@Html.ActionLink("WORKSHOP", "Workshop", "Home")</li>
                                @*<li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Blog" ? "active" : "")">@Html.ActionLink("BLOG", "Blog", "Home")</li>*@
                                <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "About" ? "active" : "")">@Html.ActionLink("ABOUT", "About", "Home")</li>
                            </ul>
                        </div>
                    </nav>
                </div>
                <div class="col-md-3 search sb-icon-search social-icons-agileits">
                    <ul>
                        <li><a href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
                        <li><a target="_blank" href="https://www.facebook.com/craftedinhanoi/?hc_ref=ARTq93jtWi1wRv7FgRVXkJJbgOvHARoJOAs4z1RRFv5cn-W_f2goXIJKvNDaGLWNym0"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                    </ul>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
    @RenderBody()
    <div class="footer-agileits-w3layouts" id="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-7">
                    <div class="row">
                        <div class="col-md-3"></div>
                        <div class="col-md-3 item address">
                            <div class="title">ADDRESS</div>
                            <div class="content">
                                500 Terry Francois St.
                                San Francisco,
                                CA 94158
                            </div>
                        </div>
                        <div class="col-md-3 item contact">
                            <div class="title">CONTACT</div>
                            <div class="content">
                                info@mysite.com
                                Tel: 123-456-7890
                            </div>
                        </div>
                        <div class="col-md-3 item hours">
                            <div class="title">HOURS</div>
                            <div class="content">
                                OPEN DAILY
                                10AM-8PM
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="row">
                        <div class="col-md-10 item sendmail">
                            <div class="title">MAILING LIST</div>
                            <div class="content">
                                <div>
                                    <input placeholder="Email Address" />
                                </div>
                                <div>
                                    <button>SUBSCRIBE</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</body>
</html>